% Dollarama Strategic Initiatives Section Template
% Parametric template for strategic sections with header images and comparisons
% Usage: \usepackage{dollarama-section-strategic}
%        \dollaramastrategicinitiatives{title}{subtitle}{content}{headerimage}

\ProvidesPackage{dollarama-section-strategic}

% Required packages
\RequirePackage{tikz}
\RequirePackage{graphicx}
\RequirePackage{enumitem}

% Strategic Initiatives Section Command
% Parameters: {section_title}{section_subtitle}{content_text}{header_image_path}
\newcommand{\dollaramasectionstrategic}[4]{
    \clearpage
    
    % Add banner image using simple approach
    \noindent
    \makebox[\textwidth][c]{%
        \includegraphics[width=\textwidth, height=4cm, keepaspectratio=false]{#4}%
    }
    \vspace{0.2cm}
    
    % Section header with innovation focus
    \begin{center}
        {\fontsize{28}{34}\selectfont\bfseries\color{DollaramaDarkGreen} #1}
        
        \vspace{0.5cm}
        
        % Subtitle if provided
        \ifx\relax#2\relax
        \else
            {\fontsize{16}{20}\selectfont\color{DollaramaLightGray} #2}
            \vspace{0.5cm}
        \fi
        
        % Strategic gradient line
        \begin{tikzpicture}
            \shade[left color=DollaramaGreen, right color=DollaramaDarkGreen] 
                  (0,0) rectangle (12,0.1);
        \end{tikzpicture}
    \end{center}
    
    \vspace{1.5cm}
    
    % Content area
    \begin{flushleft}
        {\fontsize{12}{16}\selectfont #3}
    \end{flushleft}
}

% Digital transformation subsection
\newcommand{\dollaramadigitaltransformation}[2]{
    \vspace{1cm}
    
    % Subsection title with tech accent
    {\fontsize{18}{22}\selectfont\bfseries\color{DollaramaDarkGreen} #1}
    
    \vspace{0.3cm}
    \begin{tikzpicture}
        \shade[left color=DollaramaGreen, right color=DollaramaDarkGreen] 
              (0,0) rectangle (8,0.05);
    \end{tikzpicture}
    \vspace{0.8cm}
    
    % Content
    {\fontsize{11}{15}\selectfont #2}
}

% Before/After comparison template
\newcommand{\dollaramabeforeafter}[3]{
    \vspace{1.5cm}
    
    \begin{center}
        {\fontsize{14}{18}\selectfont\bfseries\color{DollaramaDarkGreen} #1}
    \end{center}
    
    \vspace{1cm}
    
    \begin{tikzpicture}
        % Container box
        \node[draw=DollaramaDarkGreen, fill=DollaramaDarkGreen!2, rounded corners=8pt, 
              text width=\textwidth-1cm, inner sep=1.5cm] at (0,0) {
            
            \begin{minipage}[t]{0.45\textwidth}
                {\fontsize{13}{17}\selectfont\bfseries\color{DollaramaGray} PREVIOUS SYSTEM}
                
                \vspace{0.5cm}
                
                {\fontsize{10}{14}\selectfont #2}
            \end{minipage}
            \hfill
            \begin{tikzpicture}[baseline=(current bounding box.center)]
                % VS arrow
                \node[circle, fill=DollaramaYellow, text=DollaramaDarkGreen, 
                      font=\fontsize{12}{14}\selectfont\bfseries] {VS};
            \end{tikzpicture}
            \hfill
            \begin{minipage}[t]{0.45\textwidth}
                {\fontsize{13}{17}\selectfont\bfseries\color{DollaramaDarkGreen} NEW PLATFORM}
                
                \vspace{0.5cm}
                
                {\fontsize{10}{14}\selectfont #3}
            \end{minipage}
        };
    \end{tikzpicture}
    
    \vspace{1cm}
}

% Innovation highlights box
