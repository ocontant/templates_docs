% Strategic milestone timeline
\newcommand{\dollaramamilestones}[4]{
    \vspace{1.5cm}
    
    \begin{center}
        {\fontsize{14}{18}\selectfont\bfseries\color{DollaramaDarkGreen} STRATEGIC MILESTONES}
    \end{center}
    
    \vspace{1cm}
    
    \begin{tikzpicture}
        % Timeline line
        \draw[DollaramaDarkGreen, thick] (0,0) -- (12,0);
        
        % Milestone points
        \foreach \x/\milestone in {2/#1, 5/#2, 8/#3, 11/#4} {
            \node[circle, fill=DollaramaYellow, draw=DollaramaDarkGreen, thick, 
                  minimum size=0.8cm] at (\x,0) {};
            \node[text width=2.5cm, align=center, above=0.5cm] at (\x,0) 
                {\fontsize{9}{11}\selectfont\milestone};
        }
    \end{tikzpicture}
    
    \vspace{1cm}
}