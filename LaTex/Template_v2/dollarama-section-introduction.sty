% Dollarama Introduction Section Template
% Parametric template for introduction sections with header images
% Usage: \usepackage{dollarama-section-introduction}
%        \dollaramaintroduction{title}{subtitle}{content}{headerimage}

\ProvidesPackage{dollarama-section-introduction}

% Required packages
\RequirePackage{tikz}
\RequirePackage{graphicx}

% Introduction Section Command
% Parameters: {section_title}{section_subtitle}{content_text}{header_image_path}
\newcommand{\dollaramasectionintroduction}[4]{
    \clearpage
    
    % Full-width section banner image
    \noindent
    \makebox[\textwidth][c]{%
        \includegraphics[width=\textwidth, height=2cm, keepaspectratio=false]{#4}%
    }
    
    \vspace{1cm}
    
    % Section header with Dollarama branding
    \begin{center}
        {\fontsize{28}{34}\selectfont\bfseries\color{DollaramaGreen} #1}
        
        \vspace{0.5cm}
        
        % Subtitle if provided
        \ifx\relax#2\relax
        \else
            {\fontsize{16}{20}\selectfont\color{DollaramaLightGray} #2}
            \vspace{0.5cm}
        \fi
        
        % Dollarama decorative line
        \textcolor{DollaramaGreen}{\rule{12cm}{1pt}}
    \end{center}
    
    \vspace{1.5cm}
    
    % Content area with professional typography
    \begin{flushleft}
        {\fontsize{12}{16}\selectfont #3}
    \end{flushleft}
}

% Strategic Overview subsection template
\newcommand{\dollaramastrategicoverview}[2]{
    \vspace{1cm}
    
    % Subsection title with accent
    {\fontsize{18}{22}\selectfont\bfseries\color{DollaramaDarkGreen} #1}
    
    \vspace{0.3cm}
    \textcolor{DollaramaGreen}{\rule{8cm}{0.5pt}}
    \vspace{0.8cm}
    
    % Content
    {\fontsize{11}{15}\selectfont #2}
}

% Key focus areas highlight box
\newcommand{\dollaramafocusareas}[1]{
    \vspace{1cm}
    
    \begin{tikzpicture}
        \node[draw=DollaramaGreen, fill=DollaramaGreen!5, rounded corners=5pt, 
              text width=\textwidth-2cm, inner sep=1cm] {
            {\fontsize{12}{16}\selectfont\bfseries\color{DollaramaGreen} Key Focus Areas:}
            
            \vspace{0.5cm}
            
            {\fontsize{11}{15}\selectfont #1}
        };
    \end{tikzpicture}
    
    \vspace{1cm}
}