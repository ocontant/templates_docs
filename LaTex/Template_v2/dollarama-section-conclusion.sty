    \vspace{1.5cm}
    
    \begin{center}
        {\fontsize{14}{18}\selectfont\bfseries\color{DollaramaDarkGreen} FUTURE OUTLOOK}
    \end{center}
    
    \vspace{1cm}
    
    \begin{tikzpicture}
        % Growth trajectory visualization
        \draw[DollaramaYellow, thick] (0,0) -- (3,0.5) -- (6,1.2) -- (9,2) -- (12,2.8);
        \draw[DollaramaDarkGreen, thick, dashed] (0,0) -- (12,2.5);
        
        % Outlook points
        \node[text width=3.5cm, align=center] at (3,-1) 
            {\fontsize{9}{11}\selectfont\color{DollaramaDarkGreen}#1};
        \node[text width=3.5cm, align=center] at (6,-1) 
            {\fontsize{9}{11}\selectfont\color{DollaramaDarkGreen}#2};
